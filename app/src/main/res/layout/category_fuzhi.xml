<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20px"
        android:gravity="center_horizontal"
        android:text="— 按肤质 —"
        android:textColor="#000"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10px"
        android:gravity="center_horizontal"
        android:text="适合自己的才是最好"
        android:textColor="#7fff0000"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/tv_classify_hun"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_weight="1"
            android:background="#5fffff00"
            android:gravity="center"
            android:text="#混合肤质#"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_classify_zhong"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#1fff00ff"
            android:gravity="center"
            android:text="#中性肤质#"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/tv_classify_gan"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_weight="1"
            android:background="#3f0000ff"
            android:gravity="center"
            android:text="#干性肤质#"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_classify_you"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#3f00ff00"
            android:gravity="center"
            android:text="#油性肤质#"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10px"
        android:layout_marginRight="10px"
        android:layout_marginTop="10px">

        <TextView
            android:id="@+id/tv_classify_dou"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_weight="1"
            android:background="#1fff0000"
            android:gravity="center"
            android:text="#痘痘肤质#"
            android:textColor="#000"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_classify_min"
            android:layout_width="0dp"
            android:layout_height="200px"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="#1f00ffff"
            android:gravity="center"
            android:text="#敏感肤质#"
            android:textColor="#000"
            android:textSize="20dp" />
    </LinearLayout>


</LinearLayout>
