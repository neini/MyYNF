<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/cbt_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20px"
        android:layout_marginTop="100px"
        android:button="@null"
        android:drawableLeft="@drawable/checkbox_selector"
        android:focusable="false"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/img_cart"
        android:layout_width="200px"
        android:layout_height="250px"
        android:layout_toRightOf="@id/cbt_cart"
        android:src="@mipmap/ic_launcher" />

    <TextView

        android:id="@+id/tv_name_cart"
        android:layout_width="wrap_content"
        android:layout_height="130px"
        android:layout_toRightOf="@id/img_cart"
        android:padding="10px"

        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_price_cart"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_below="@id/tv_name_cart"
        android:layout_marginBottom="20px"
        android:layout_toRightOf="@id/img_cart"
        android:padding="10px"

        android:textColor="#f00"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tv_no_cart"
        android:layout_width="wrap_content"
        android:layout_height="100px"
        android:layout_below="@id/tv_name_cart"
        android:layout_marginBottom="20px"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/tv_price_cart"
        android:padding="10px"

        android:textColor="#f00"
        android:textSize="18dp" />

    <LinearLayout
        android:id="@+id/ll_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/img_cart"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="0dp"
            android:layout_height="100px"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20px"
            android:layout_weight="1"
            android:padding="10px"
            android:text="购买数量"
            android:textColor="#000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imgbt_reduce"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/reduce_unable" />

            <TextView
                android:id="@+id/tv_no"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imgbt_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/add_able" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>