<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1fa6a6a6"
 >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="500px"
                android:background="@mipmap/user_center_bg">

                <ImageView
                    android:id="@+id/img_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/user_icon_default" />

                <ImageView
                    android:id="@+id/img_setting_mine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="10px"
                    android:layout_marginTop="10px"
                    android:src="@mipmap/user_setting" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re_laog_mine"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageButton
                      android:id="@+id/img_load_mine"
                    android:layout_width="500px"
                    android:layout_height="100px"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/checkin_btn_bg" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="登录"
                    android:textSize="20dp"
                    android:textColor="#0ff"/>
                <LinearLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:visibility="gone"
                android:id="@+id/ll_mine_hui"
                android:background="#fff"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_name_mine"
                    android:gravity="center"
                    android:textSize="15dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ynf"/>

                <RelativeLayout
                    android:background="#fff"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px">

                    <ImageButton
                        android:id="@+id/img_center_mine"
                        android:layout_width="300px"
                        android:layout_height="100px"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/checkin_btn_bg" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="会员中心"
                        android:textSize="20dp"
                        android:textColor="#0ff"/>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout

                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_pay_mine"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:src="@mipmap/wait_pay" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待付款"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_send_mine"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:src="@mipmap/wait_send_good" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待发货"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_get_mine"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:src="@mipmap/wait_receive_good" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待收货"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_pi_mine"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:src="@mipmap/wait_evaluate" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="待评价"
                        android:textColor="#000"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0px"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/img_backmoney_mine"
                        android:layout_width="match_parent"
                        android:layout_height="100px"
                        android:src="@mipmap/wait_refund" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="退款"
                        android:textColor="#000"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10px"
                android:id="@+id/ll_mydan_mine"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="150px">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:src="@mipmap/my_order_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:text="我的订单"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:src="@mipmap/next_icon" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_mymoney_mine"
                android:background="#fff"
                android:layout_marginTop="30px"
                android:layout_width="match_parent"
                android:layout_height="150px">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:src="@mipmap/my_coupon_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:text="我的现金券"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:src="@mipmap/next_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5px"
                android:id="@+id/ll_myjiang_mine"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="150px">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:src="@mipmap/my_lottery_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:text="我的抽奖单"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:src="@mipmap/next_icon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_myLove_mine"
                android:layout_marginTop="5px"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="150px">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:src="@mipmap/my_collection_icon" />

                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:text="我收藏的商品"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:src="@mipmap/next_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="5px"
                android:id="@+id/ll_con_mine"
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="150px">

                <ImageView
                    android:layout_width="100px"
                    android:layout_height="100px"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20px"
                    android:layout_weight="1"
                    android:src="@mipmap/personal_center_contact_service_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8"
                    android:text="联系客服"
                    android:textColor="#000"/>

                <ImageView
                    android:layout_width="60px"
                    android:layout_height="60px"
                    android:layout_gravity="center_vertical"

                    android:layout_weight="1"
                    android:src="@mipmap/next_icon" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>